# ============================================
# PROFESSIONAL IOL TRADING BOT v2.0
# Environment Configuration
# ============================================

# -------------------- MODE --------------------
# MOCK_MODE: True = Simulación con datos falsos (SIN RIESGO)
# PAPER_MODE: True = Precios REALES de IOL pero sin ejecutar órdenes (SIN RIESGO)
# LIVE_MODE: Ambos en False = Trading REAL con dinero real (¡CUIDADO!)

# Configuración actual: MOCK MODE (seguro para testing)
MOCK_MODE=True
PAPER_MODE=False

# -------------------- IOL API --------------------
# Credenciales de Invertir Online
# IMPORTANTE: Completa con tus datos reales si quieres usar PAPER o LIVE mode
IOL_USERNAME=
IOL_PASSWORD=
IOL_BASE_URL=https://api.invertironline.com

# -------------------- NEWS APIs (OPCIONAL) --------------------
# Puedes dejar vacío si no tienes las API keys
# El bot funcionará sin análisis de sentimiento

# NewsData.io (https://newsdata.io/) - Gratis hasta 200 requests/día
NEWSDATA_API_KEY=

# Finnhub (https://finnhub.io/) - Gratis hasta 60 requests/minuto
FINNHUB_API_KEY=

# Alpha Vantage (https://www.alphavantage.co/) - Gratis hasta 5 requests/minuto
ALPHAVANTAGE_API_KEY=

# -------------------- NOTIFICATIONS --------------------
# Telegram Bot (https://core.telegram.org/bots)
# Instrucciones:
# 1. Habla con @BotFather en Telegram
# 2. Envía /newbot y sigue las instrucciones
# 3. Copia el token que te da
# 4. Envía un mensaje a tu bot
# 5. Visita: https://api.telegram.org/bot<TOKEN>/getUpdates
# 6. Copia el "chat_id" del resultado

TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# -------------------- TRADING PARAMETERS --------------------
# Símbolos a operar (separados por coma, sin espacios)
TRADING_SYMBOLS=GGAL,YPFD,PAMP,ALUA,BMA

# Intervalo de trading en segundos
# 300 = 5 minutos, 900 = 15 minutos, 3600 = 1 hora
TRADING_INTERVAL=300

# Capital inicial en modo MOCK (pesos argentinos)
MOCK_INITIAL_CAPITAL=1000000

# -------------------- RISK MANAGEMENT --------------------
# Porcentaje de riesgo por operación
# 2.0 = arriesgar 2% del capital por trade (conservador)
# 5.0 = arriesgar 5% del capital por trade (agresivo)
RISK_PER_TRADE=2.0

# Máximo porcentaje de portafolio por activo
# 20.0 = máximo 20% del capital en un solo activo
MAX_POSITION_SIZE=20.0

# Stop loss porcentual (protección contra pérdidas)
# 5.0 = cerrar posición si pierde 5%
STOP_LOSS_PERCENT=5.0

# Take profit porcentual (tomar ganancias)
# 10.0 = cerrar posición si gana 10%
TAKE_PROFIT_PERCENT=10.0

# -------------------- ML PARAMETERS --------------------
# Activar/desactivar el agente de Reinforcement Learning
# True = usar predicciones del modelo PPO
# False = solo usar análisis técnico
USE_RL_AGENT=True

# Activar/desactivar análisis de sentimiento
# True = analizar noticias con FinBERT (requiere API keys arriba)
# False = solo usar análisis técnico
USE_SENTIMENT_ANALYSIS=False

# Activar/desactivar multi-timeframe analysis
# True = analizar en 5min, 1h y 1d
# False = solo analizar en timeframe principal
USE_MULTI_TIMEFRAME=True

# Frecuencia de reentrenamiento del modelo RL (en días)
# 7 = reentrenar cada semana
RETRAIN_FREQUENCY_DAYS=7

# -------------------- PORTFOLIO REBALANCING --------------------
# Activar rebalanceo automático del portafolio
# True = mantener proporciones objetivo entre activos
# False = dejar que las posiciones varíen libremente
ENABLE_REBALANCING=False

# Frecuencia de rebalanceo en días
REBALANCE_FREQUENCY_DAYS=7

# Umbral de desviación para rebalancear (%)
# 5.0 = rebalancear si un activo se desvía más de 5% de su objetivo
REBALANCE_THRESHOLD=5.0

# -------------------- DATABASE --------------------
# Ubicación de la base de datos SQLite
DATABASE_URL=sqlite:///./data/trades.db

# -------------------- LOGGING --------------------
# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Archivo de logs
LOG_FILE=./logs/bot.log

# -------------------- DASHBOARD --------------------
# Puerto del dashboard Streamlit
DASHBOARD_PORT=8501

# Host del dashboard (0.0.0.0 = accesible desde red local)
DASHBOARD_HOST=0.0.0.0
